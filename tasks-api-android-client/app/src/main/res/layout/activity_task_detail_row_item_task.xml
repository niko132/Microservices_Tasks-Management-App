<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/task_detail_activity_row_item_task_description_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:maxLines="5"
        android:imeOptions="actionDone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_marginTop="8dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <RadioButton
            android:id="@+id/task_detail_activity_row_item_task_status_open_button"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:button="@null"
            android:text="open"
            android:drawableTop="@drawable/baseline_brightness_low_24"
            android:drawableTint="@drawable/status_open_tint"
            android:gravity="center_horizontal"/>

        <RadioButton
            android:id="@+id/task_detail_activity_row_item_task_status_inprogress_button"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:button="@null"
            android:text="in progress"
            android:drawableTop="@drawable/baseline_brightness_medium_24"
            android:drawableTint="@drawable/status_inprogress_tint"
            android:gravity="center_horizontal"/>

        <RadioButton
            android:id="@+id/task_detail_activity_row_item_task_status_closed_button"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:button="@null"
            android:text="closed"
            android:drawableTop="@drawable/baseline_brightness_high_24"
            android:drawableTint="@drawable/status_closed_tint"
            android:gravity="center_horizontal"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assigned to:"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/task_detail_activity_row_item_task_assignee_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

</LinearLayout>